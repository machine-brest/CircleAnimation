<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@../styles/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<Pane fx:id="contentPane" id="contentPane" prefHeight="600" prefWidth="800" />
	</center>
	<right>
		<Pane fx:id="commandPane" id="commandPane" prefWidth="200.0">
			<VBox>
				<CheckBox fx:id="showLinesCheckbox" text="Show lines" />
				<CheckBox fx:id="showInnerCircleCheckbox" text="Show inner circle" />
				<CheckBox fx:id="showRotateCircleCheckbox" text="Show rotation circle" />
				<Button fx:id="playButton" maxWidth="Infinity" mnemonicParsing="false" text="Play" />
			</VBox>
		</Pane>
	</right>
</BorderPane>
